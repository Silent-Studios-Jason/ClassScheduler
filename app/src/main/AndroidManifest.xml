<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.silentstudiosmediagroup.classscheduler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CoursesActivity"
            android:label="@string/title_activity_courses"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.silentstudiosmediagroup.classscheduler.MainActivity" />
        </activity>
        <activity
            android:name=".MentorActivity"
            android:label="@string/title_activity_mentor"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.silentstudiosmediagroup.classscheduler.MainActivity" />
        </activity>
        <activity
            android:name=".TermActivity"
            android:label="@string/title_activity_term"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.silentstudiosmediagroup.classscheduler.MainActivity" />
        </activity>
        <activity
            android:name=".TermDetailActivity"
            android:label="@string/title_activity_term_detail"
            android:parentActivityName=".TermActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.silentstudiosmediagroup.classscheduler.TermActivity" />
        </activity>
        <activity
            android:name=".CourseDetailsActivity"
            android:label="@string/title_activity_course_details"
            android:parentActivityName=".TermDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.silentstudiosmediagroup.classscheduler.TermDetailActivity" />
        </activity>
        <activity
            android:name=".NoteActivity"
            android:label="@string/title_activity_note"
            android:parentActivityName=".CourseDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.silentstudiosmediagroup.classscheduler.CourseDetailsActivity" />
        </activity>
        <activity
            android:name=".AddNewCourseActivity"
            android:label="@string/title_activity_add_new_course"
            android:parentActivityName=".TermDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.silentstudiosmediagroup.classscheduler.TermDetailActivity" />
        </activity>
        <activity
            android:name=".MyCoursesActivity"
            android:label="@string/title_activity_my_courses"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.silentstudiosmediagroup.classscheduler.MainActivity" />
        </activity>
    </application>

</manifest>